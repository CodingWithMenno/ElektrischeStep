<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EcoActivity">

        <TextView
            android:id="@+id/ecoSpeedMeter"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:text="23"
            android:layout_width="69sp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM/H"
            app:layout_constraintBottom_toBottomOf="@+id/ecoSpeedMeter"
            app:layout_constraintStart_toEndOf="@+id/ecoSpeedMeter" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/ecoElectricBrake"
            android:onClick="onElectronicBrakeClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="50dp"
            android:paddingBottom="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:track="@drawable/custom_switch_track"
            android:thumb="@drawable/custom_switch_thumb"/>

        <com.progress.progressview.ProgressView
            android:id="@+id/ecoPowerMeter"
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pvDirection="fromRight"
            app:pvAnimateDuration="1"
            app:pvProgress="0" />


        <Button
            android:id="@+id/btnEcoStart"
            android:onClick="onStartClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>